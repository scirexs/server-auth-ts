{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["ESNext"],
    "types": ["./worker-configuration.d.ts", "@types/node"],
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
